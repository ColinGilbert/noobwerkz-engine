rsync -av font ../engine/android/assets &&
rsync -av shaders ../engine/android/assets &&
rsync -av gradient_map.tga ../engine/android/assets &&
cd ../engine/build &&
cmake -DNOOB_PLATFORM_LINUX:BOOL=false -DNOOB_PLATFORM_ANDROID:BOOL=true -DCMAKE_TOOLCHAIN_FILE=~/devel/android-cmake/android.toolchain.cmake .. && make -j8
